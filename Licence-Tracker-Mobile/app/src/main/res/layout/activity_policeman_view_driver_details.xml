<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue2"
    tools:context=".Policeman.PolicemanViewDriverDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/card_bg2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="100dp"
                    android:text="Driver Details"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="24dp"
                    android:textColor="@color/white2"/>

                <EditText
                    android:id="@+id/fname"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_box_background"
                    android:textColor="@color/black2"
                    android:textColorHint="@color/black2"
                    android:hint="First Name"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/lname"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_box_background"
                    android:textColor="@color/black2"
                    android:textColorHint="@color/black2"
                    android:hint="Last Name"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/nic"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_box_background"
                    android:textColor="@color/black2"
                    android:textColorHint="@color/black2"
                    android:hint="NIC"
                    android:gravity="center"
                    android:inputType="text"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/number"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_box_background"
                    android:textColor="@color/black2"
                    android:textColorHint="@color/black2"
                    android:hint="Phone Number"
                    android:gravity="center"
                    android:inputType="number"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/email"
                    android:enabled="false"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_box_background"
                    android:textColor="@color/black2"
                    android:textColorHint="@color/black2"
                    android:hint="Email"
                    android:gravity="center"
                    android:inputType="textEmailAddress"/>

                <Button
                    android:id="@+id/btnViewNic"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background"
                    android:text="View NIC"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btnViewLicence"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background"
                    android:text="View Licence"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btnViewPassport"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background"
                    android:text="View Passport"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btnViewFineList"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background"
                    android:text="View Fine List"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btnAddFine"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_background"
                    android:text="Add Fine"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"/>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>